<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/app_info_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="APPLICATION INFO"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="APP"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/app_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="PACKAGE"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/pack_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="SOURCE"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/src_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="DATA"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/data_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="I/O TRACE"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <Switch
                android:id="@+id/trace_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/switch_thumb_selector"
                android:switchMinWidth="80dp"

                />
            </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="INDEX"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="4"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4E81C0"
                android:text="VFS"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C14F4B"
                android:text="EXT4"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9ABB4F"
                android:text="BLOCK"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8063A4"
                android:text="DRIVER"
                android:textSize="15dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_result_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*"
        android:weightSum="1"
        >
        <TableRow
            android:id="@+id/row_r"
            android:weightSum="1"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="#FFFFFF"
                android:text="R"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/g_vfs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4E81C0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0"/>
            <TextView
                android:id="@+id/g_ext4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C14F4B"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/g_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9ABB4F"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="0"/>
            <TextView
                android:id="@+id/g_driver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8063A4"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_w_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:paddingBottom="3dp"
        android:stretchColumns="*">
        <TableRow
            android:id="@+id/row_w"
            android:weightSum="1"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="#FFFFFF"
                android:text="W"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/g_w_vfs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4E81C0"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0"/>
            <TextView
                android:id="@+id/g_w_ext4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C14F4B"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0"/>
            <TextView
                android:id="@+id/g_w_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9ABB4F"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_weight="0"/>

            <TextView
                android:id="@+id/g_w_driver"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#8063A4"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_weight="0"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_result_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="R"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="W"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="VFS"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/vfs_r"/>/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/vfs_w"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="EXT4"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/ext4_r"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/ext4_w"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="BLOCK"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/block_r"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/block_w"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="DRIVER"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/driver_r"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="15dp"
                android:gravity="center"
                android:id="@+id/driver_w"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trag_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/frag_file_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/frag_file_per"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/defrag_launch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="DEFRAG"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:padding="3dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <Button
                android:id="@+id/save1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="save 1" />
            <Button
                android:id="@+id/save2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="Save 2" />

        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <Button
                android:id="@+id/compare"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="compare"
                android:layout_span="2"
                />
        </TableRow>
    </TableLayout>

</TableLayout>