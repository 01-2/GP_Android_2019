<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:id="@+id/app_info_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="2dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="APPLICATION INFO"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_span="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="APP"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/app_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="PACKAGE"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/pack_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="SOURCE"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/src_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="DATA"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/data_textview"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_weight="2"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="2dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="I/O TRACE"
                android:textSize="20dp"
                android:gravity="center"/>
            <Switch
                android:id="@+id/trace_switch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:track="@drawable/switch_track_selector"
                android:thumb="@drawable/switch_thumb_selector"
                android:switchMinWidth="80dp"

                />
            <Button
                android:id="@+id/app_launch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="LAUNCH"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_result_graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="2dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GRAPH AREA"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trace_result_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:background="#000000"
        android:padding="2dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="R"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="W"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="VFS"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="EXT4"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="BLOCK"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="DRIVER"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/trag_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="5dp"
        android:background="#000000"
        android:padding="2dp"
        android:stretchColumns="*">
        <TableRow
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/frag_file_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="00 / 00"
                android:textSize="20dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/frag_file_per"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="000%"
                android:textSize="20dp"
                android:gravity="center"/>
            <Button
                android:id="@+id/defrag_launch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:text="DEFRAG"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
</LinearLayout>